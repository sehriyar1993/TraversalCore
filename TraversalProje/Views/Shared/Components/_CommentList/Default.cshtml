@using EntityLayer.Concrete
@model List<Commentler>
<div class="comments mt-5">
    <h4 class="side-title ">Şərhlər(@ViewBag.Say)</h4>
    @foreach(var x in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
                <img src="@x.AppUser.ImageUrl" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@x.AppUser.Name @x.AppUser.Surname</a>
                        @(((DateTime)x.CommentDate).ToString("dd-MMM-yyyy"))

                    </li>
                    <li class="reply-last">
                        <a href="#reply" class="reply">
                            Cavabla
                        </a>
                    </li>
                </ul>
                <p>
                    @x.CommentCondent
                </p>
            </div>
        </div>

    }
    

</div>
