@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Kampanyalar</h2>
            
        </div>
    </div>
</section>
<section class="w3l-pricinghny">
    <div class="pricing-inner-info py-5">
        <div class="container py-lg-4">
            <div class="pricing-info-grids">
                @foreach(var x in Model)
                {
                    <div class="price-box">
                        <div class="grid grid-column-2">
                            <div class="column pr-img-gd">
                                <h6 class="pricehead">
                                    <span class="fa fa-delicious mr-2" aria-hidden="true"></span> @x.Title
                                </h6>
                            </div>
                            <div class="column text-lg-center">
                                <p class="price-title">@x.Content</p>
                            </div>
                            <div class="column price-number text-md-right">
                                <p class="price-title"> @(((DateTime)x.Date).ToString("dd-MMM-yyyy")) </p>
                                <button class="btn btn-style btn-primary ml-lg-3">Əldə Edin</button>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
