@model TraversalProje.Models.UserRegisterViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>
@*	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
*@	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
</head>

<body>
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Xoş Gəldiniz</h5>
							<h3>Yeni Hesab Yaratma Səhifəsi</h3>
							<p>
								Xidmətlərimizdən istifadə etmək və yeniliklərdən xəbərdar olmaq üçün saytımızda qeydiyyatdan keçin
							</p>
							<a href="/Default/Index/" class="read-more-1 btn">İnternet Səhifəmizə Keçid</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bizə Qoşulun</h4>
						<p>Pulsuz Hesab Yaradın</p>
					</div>
					<form  method="post" class="signin-form" asp-action="SignUp" asp-controller="LogInController1" enctype="multipart/form-data">
						<div class="form-input">
							<label>Ad</label>
							<input type="text"   asp-for="Name"/>
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Soyad</label>
							<input type="text"  asp-for="Surname"/>
							<span asp-validation-for="Surname" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>İstifadəçi Adı</label>
							<input type="text"  asp-for="UserName" />
							<span asp-validation-for="UserName" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email"  asp-for="Mail" />
							<span asp-validation-for="Mail" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Şifrə</label>
							<input type="password"  asp-for="Password" />
							<span asp-validation-for="Password" class="text-danger"></span>

						</div>
						<div class="form-input">
							<label>Şifrə Təkara</label>
							<input type="password"  asp-for="ConfirmPassword" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

						</div>
						<div class="text-danger"asp-validation-summary="ModelOnly">

						</div>
						<label class="container">
							Saytın <a href="#">Şərtləti </a> İlə <a href="#">Razılaşıram</a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Hesab Yarat</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year. Bütün Haqlar Qorunur
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
</body>

</html>