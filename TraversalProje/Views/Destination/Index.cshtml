@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!doctype html>
<html lang="zxx">
<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Təyinat  </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index">Ana Səhifə</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Təyinat  </li>
                </ul>
            </div>
        </div>
    </section>
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Təyinat </h3>
                <div class="row">
                    @foreach (var x in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                <a href="/Destination/DestinationDetas/@x.DestinationID/">
                                    <img src="@x.Image" alt="" style="width:370px; height:300px" class="img-fluid">
                                </a>
                                <div class="info">
                                    <h4><a href="/Destination/DestinationDetas/@x.DestinationID/">@x.City</a></h4>
                                    <p>@x.DayNight </p>
                                    <div class="dst-btm">
                                        <h6 class="">Başlayan Qiymətlər </h6>
                                        <span>@x.Price  Azn</span>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    }
                    
                </div>
            </div>
        </div>
    </section>
    <link rel="stylesheet " href="~/Traversal-Liberty/assets/css/style-liberty.css" />
    <script src="~/Traversal-Liberty/assets/js/bootstrap.min.js"></script>

</body>
</html>
