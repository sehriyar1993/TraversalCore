@model EntityLayer.Concrete.About

@{
    ViewData["Title"] = "AddAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Haqqımızda Bölməsi</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Başlıq")
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Başlıq 2")
        <input type="text" asp-for="Title2" class="form-control" />

    </div>
    <div class="form-group">
        @Html.Label("Status")
        <input type="text" asp-for="Status" class="form-control" />

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Şəkil")
        <input type="text" asp-for="Image1" class="form-control" />

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Haqqında 1")
        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>

    </div>
    <div class="form-group">
        @Html.Label("Haqqında 2")
        <textarea cols="30" rows="5" class="form-control" asp-for="Description2 "></textarea>

    </div>
    <br />

    <button class="btn btn-outline-success">Təsdiqlə</button>
</form>


