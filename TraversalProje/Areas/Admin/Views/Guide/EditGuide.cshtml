@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Məlumatları Yenilə</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Status")
        <input type="text" asp-for="Status" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Şəkil")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Şəkil Post")
        <input type="text" asp-for="GuideListImage" class="form-control" />

    </div>
    <br />
    <div class="form-group">
        @Html.Label("İnstagram Link")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Twitter Link")
        <input type="text" asp-for="TwiterUrl" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Haqqında")
        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
    </div>
    <br />

    <button class="btn btn-outline-success">Təsdiqlə</button>
</form>



