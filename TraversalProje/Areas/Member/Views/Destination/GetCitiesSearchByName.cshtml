﻿@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Tur Rotası Axtarışı</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <p class="card-text">Biz Öz İşimizin Mütəxəssisiyik. Ətraflı Məlumat Aşağıdan əldə edə Bilərsiz</p>

                        <form asp-action="GetCitiesSearchByName" method="get" asp-area="Member">
                            <div>
                                <p>
                                    <b>Axtardığınız Şəhərin Adını Daxil Edin:</b> <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" />
                                    <br />
                                    <input type="submit" value="Axtarın" class="btn btn-outline-dark" />
                                </p>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Şəhər</th>
                                        <th>Müddət</th>
                                        <th>Boş Yer</th>
                                        <th>Qiymət</th>
                                        <th>Ətraflı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.DestinationID</td>
                                            <td>@item.City</td>
                                            <td>@item.DayNight</td>
                                            <td>@item.Capacity</td>
                                            <td>@item.Price₺</td>
                                            <td><a href="//Destination/DestinationDetas/@item.DestinationID" class="btn btn-outline-info">Ətraflı</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>